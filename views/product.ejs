<%- include('be_header') %>

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="card-title h5 text-center mb-4">รายการสินค้า</div>
            <div>
                <a href="/addProduct" class="btn btn-info mb-3">
                    <span class="material-symbols-outlined material-icons">
                        add
                    </span>
                    เพิ่มรายการสินค้า
                </a>
            </div>
            <table class="table table-bordered table-stripped">
                <thead>
                    <tr align="center">
                        <td width="50px">จัดการข้อมูล</td>
                        <td>ภาพสินค้า</td>
                        <td>ประเภทสินค้า</td>
                        <td>barcode</td>
                        <td>ชื่อสินค้า</td>
                        <td>ราคาทุน</td>
                        <td>ราคาขาย</td>
                    </tr>
                </thead>
                <tbody>
                    <% product.forEach((product) => { %>
                    <tr>
                        <td>
                            <a href="/editProduct/<%= product.id %>" class="btn btn-dark ">
                                <span class="material-symbols-outlined material-icons">
                                    edit
                                </span>
                                edit
                            </a>
                            <a href="/deleteProduct/<%= product.id %>/<%= product.img %>" class="btn btn-danger mt-2">
                                <span class="material-symbols-outlined material-icons">
                                    delete
                                </span>
                                delete
                            </a>
                        </td>
                        <td align="center"><img src="../images/<%= product.img %>" width="130px" height="150px"></td>
                        <td align="center"><%= product.category_name %></td>
                        <td align="center"><%= product.barcode %></td>
                        <td align="center"><%= product.name %></td>
                        <td align="right"><%= product.cost %></td>
                        <td align="right"><%= product.price %></td>
                    </tr>
                    <% }) %> 
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('be_footer') %>  