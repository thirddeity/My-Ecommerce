<%- include('be_header') %>

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="card-title mb-4 h5">เพิ่มรายการสินค้า</div>
           
            <form method="post" enctype="multipart/form-data">
                <div class="row mb-2">
                  <div class="col">
                    <label>barcode</label>
                    <input type="text" class="form-control" name="barcode">
                  </div>
                </div>

                <div class="row mb-2">
                  <div class="col">
                    <label>ประเภทสินค้า</label>
                    <select class="form-control" name="category_id">
                        <% categories.forEach((c) => { %>
                        <option value="<%= c.id %>" <% if(product.category_id == c.id) { %>
                            selected
                        <% } %>
                        >
                            <%= c.name %>
                        </option> 
                         <% }) %> 
                    </select>
                  </div>
                  <div class="col">
                        <label>ชื่อสินค้า</label>
                        <input type="text" class="form-control" name="name">
                  </div>
                </div>

                <div class="row mb-2">
                  <div class="col">
                    <label>ราคาทุน</label>
                    <input type="text" class="form-control" name="cost">
                  </div>
                  <div class="col">
                    <label>ราคาจำหน่าย</label>
                    <input type="text" class="form-control" name="price">
                  </div>
                </div>

                <div class="row mb-2">
                    <div class="col">
                        <label>ภาพสินค้า</label>
                        <div class="mt-1">
                            <img src="<%= product.img %>" width="150px">
                            <input type="file" class="form-control" name="img">
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-info">
                        <span class="material-symbols-outlined material-icons">
                            Add_shopping_cart
                        </span>
                        เพิ่ม
                    </button>
                </div>
              </form>
        </div>
    </div>
</div>

<%- include('be_footer') %>  